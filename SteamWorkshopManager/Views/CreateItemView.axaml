<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SteamWorkshopManager.ViewModels"
             xmlns:models="using:SteamWorkshopManager.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SteamWorkshopManager.Views.CreateItemView"
             x:DataType="vm:CreateItemViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Padding="16,12" Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Command="{Binding CancelCommand}"
                        Content="Annuler"
                        Background="Transparent"/>
                <TextBlock Grid.Column="1" Text="Nouvel item"
                           FontSize="18" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="16,0"/>
                <Button Grid.Column="2"
                        Command="{Binding CreateCommand}"
                        Content="Creer"
                        IsEnabled="{Binding !IsCreating}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24" Margin="16">
                <!-- Drag & Drop zone -->
                <Border x:Name="DropZone"
                        Background="#F5F5F5"
                        BorderBrush="#BDBDBD"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="32"
                        DragDrop.AllowDrop="True">
                    <StackPanel HorizontalAlignment="Center" Spacing="12">
                        <TextBlock Text="Glissez-deposez le dossier de votre mod ici"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Text="ou"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
                        <Button Command="{Binding BrowseContentFolderCommand}"
                                Content="Parcourir..."
                                HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ContentFolderPath, TargetNullValue='Aucun dossier selectionne'}"
                                   HorizontalAlignment="Center"
                                   FontSize="12"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Form -->
                <StackPanel Spacing="16">
                    <!-- Preview image -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Image de previsualisation" FontWeight="SemiBold"/>
                        <Grid ColumnDefinitions="200,*">
                            <Border Width="200" Height="120"
                                    Background="{DynamicResource SystemControlBackgroundBaseLowBrush}"
                                    CornerRadius="4" ClipToBounds="True">
                                <Panel>
                                    <Image Source="{Binding PreviewImage}" Stretch="UniformToFill"
                                           IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                    <TextBlock Text="Apercu" HorizontalAlignment="Center" VerticalAlignment="Center"
                                               IsVisible="{Binding PreviewImage, Converter={x:Static ObjectConverters.IsNull}}"/>
                                </Panel>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center" Spacing="8">
                                <TextBlock Text="{Binding PreviewImagePath, TargetNullValue='Aucune image selectionnee'}"
                                           TextTrimming="CharacterEllipsis"/>
                                <Button Command="{Binding BrowsePreviewImageCommand}"
                                        Content="Parcourir..."/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Title -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Titre *" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Title}" MaxLength="128"
                                 Watermark="Nom de votre mod"/>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Description" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding Description}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="120"
                                 Watermark="Decrivez votre mod..."/>
                    </StackPanel>

                    <!-- Tags -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Tags" FontWeight="SemiBold"/>
                        <ItemsControl ItemsSource="{Binding TagCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="models:TagCategory">
                                    <Expander Header="{Binding Name}" Margin="0,0,0,4">
                                        <ItemsControl ItemsSource="{Binding Tags}" Margin="16,8,0,0">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate DataType="models:WorkshopTag">
                                                    <CheckBox Content="{Binding Name}"
                                                              IsChecked="{Binding IsSelected}"
                                                              Margin="0,0,16,4"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Visibility -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Visibilite" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding VisibilityOptions}"
                                  SelectedItem="{Binding Visibility}"
                                  Width="200"/>
                    </StackPanel>

                    <!-- Initial changelog -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Changelog initial" FontWeight="SemiBold"/>
                        <TextBox Text="{Binding InitialChangelog}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Height="80"
                                 Watermark="Version initiale..."/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Error message -->
        <Border Grid.Row="2"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                Background="#F8D7DA" Padding="16" Margin="16,0,16,16" CornerRadius="4">
            <TextBlock Text="{Binding ErrorMessage}" Foreground="#721C24"/>
        </Border>

        <!-- Loading overlay -->
        <Border Grid.RowSpan="3"
                IsVisible="{Binding IsCreating}"
                Background="#80000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200"/>
                <TextBlock Text="Creation en cours..." Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
