<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SteamWorkshopManager.ViewModels"
             xmlns:models="using:SteamWorkshopManager.Models"
             xmlns:local="using:SteamWorkshopManager"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="SteamWorkshopManager.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Padding="24,16" Background="#171a21">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Command="{Binding CloseCommand}"
                        Classes="ghost">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="&#x2190;" FontSize="16"/>
                        <TextBlock Text="{DynamicResource Back}"/>
                    </StackPanel>
                </Button>
                <TextBlock Grid.Column="1" Text="{DynamicResource Settings}"
                           FontSize="20" FontWeight="SemiBold"
                           Foreground="White"
                           VerticalAlignment="Center" Margin="24,0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24" Margin="24,24">
                <!-- Sessions Section -->
                <Border Classes="card">
                    <StackPanel Spacing="16">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="{DynamicResource Sessions}" Classes="section-header"/>
                            <Button Grid.Column="1"
                                    Command="{Binding AddSessionCommand}"
                                    Classes="accent"
                                    Padding="12,6">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="+" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{DynamicResource AddSession}"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Sessions List -->
                        <ItemsControl ItemsSource="{Binding Sessions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:WorkshopSession">
                                    <Button Command="{Binding $parent[ItemsControl].((vm:SettingsViewModel)DataContext).SwitchSessionCommand, FallbackValue={x:Null}}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="0"
                                            Margin="0,0,0,8"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand">
                                        <Border Padding="12"
                                                CornerRadius="6"
                                                Background="#1e2328">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!-- Active indicator -->
                                                <Border Grid.Column="0"
                                                        Width="4"
                                                        CornerRadius="2"
                                                        Margin="0,0,12,0"
                                                        Background="#a4d007"
                                                        IsVisible="{Binding IsActive}"/>

                                                <!-- Session info -->
                                                <StackPanel Grid.Column="1" Spacing="2">
                                                    <TextBlock Text="{Binding GameName}"
                                                               FontWeight="SemiBold"
                                                               Foreground="White"/>
                                                    <TextBlock Text="{Binding AppId, StringFormat='AppID: {0}'}"
                                                               FontSize="12"
                                                               Foreground="#8899a6"/>
                                                </StackPanel>

                                                <!-- Active badge -->
                                                <Border Grid.Column="2"
                                                        IsVisible="{Binding IsActive}"
                                                        Background="#2a3a2a"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        VerticalAlignment="Center">
                                                    <TextBlock Text="{DynamicResource Active}"
                                                               FontSize="11"
                                                               Foreground="#a4d007"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Restart notice -->
                        <Border Background="#1a3a5a"
                                CornerRadius="4"
                                Padding="12">
                            <TextBlock Text="{DynamicResource SessionSwitchNotice}"
                                       FontSize="12"
                                       Foreground="#66c0f4"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Language Section -->
                <Border Classes="card">
                    <StackPanel Spacing="16">
                        <TextBlock Text="{DynamicResource Language}" Classes="section-header"/>

                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <!-- English Button -->
                            <Button Command="{Binding SelectEnglishCommand}"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Panel Width="140" Height="90">
                                    <!-- Unselected state -->
                                    <Border IsVisible="{Binding !IsEnglishSelected}"
                                            CornerRadius="8"
                                            ClipToBounds="True"
                                            BorderThickness="3"
                                            BorderBrush="#3a4a5a"
                                            Background="#1e2328">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                            <TextBlock Text="GB" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#8899a6"/>
                                            <TextBlock Text="{DynamicResource English}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <!-- Selected state -->
                                    <Border IsVisible="{Binding IsEnglishSelected}"
                                            CornerRadius="8"
                                            ClipToBounds="True"
                                            BorderThickness="3"
                                            BorderBrush="#a4d007"
                                            Background="#2a3a2a">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                            <TextBlock Text="GB" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#a4d007"/>
                                            <TextBlock Text="{DynamicResource English}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Panel>
                            </Button>

                            <!-- French Button -->
                            <Button Command="{Binding SelectFrenchCommand}"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Panel Width="140" Height="90">
                                    <!-- Unselected state -->
                                    <Border IsVisible="{Binding !IsFrenchSelected}"
                                            CornerRadius="8"
                                            ClipToBounds="True"
                                            BorderThickness="3"
                                            BorderBrush="#3a4a5a"
                                            Background="#1e2328">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                            <TextBlock Text="FR" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#8899a6"/>
                                            <TextBlock Text="{DynamicResource French}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <!-- Selected state -->
                                    <Border IsVisible="{Binding IsFrenchSelected}"
                                            CornerRadius="8"
                                            ClipToBounds="True"
                                            BorderThickness="3"
                                            BorderBrush="#a4d007"
                                            Background="#2a3a2a">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                                            <TextBlock Text="FR" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#a4d007"/>
                                            <TextBlock Text="{DynamicResource French}"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Panel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Debug Mode Section -->
                <Border Classes="card">
                    <StackPanel Spacing="16">
                        <TextBlock Text="{DynamicResource DebugMode}" Classes="section-header"/>

                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{DynamicResource EnableDebugMode}"
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{DynamicResource DebugModeDescription}"
                                           Foreground="#8899a6"
                                           FontSize="12"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            <ToggleSwitch Grid.Column="1"
                                          IsChecked="{Binding IsDebugModeEnabled}"
                                          OnContent=""
                                          OffContent=""
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Log file path (visible when debug mode is enabled) -->
                        <StackPanel IsVisible="{Binding IsDebugModeEnabled}" Spacing="8">
                            <TextBlock Text="{DynamicResource LogFileLocation}"
                                       Foreground="#8899a6"
                                       FontSize="12"/>
                            <Button Command="{Binding OpenLogFolderCommand}"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    HorizontalAlignment="Left">
                                <Border Background="#1e2328"
                                        CornerRadius="4"
                                        Padding="12,8">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸ“‚" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding LogFilePath}"
                                                   Foreground="#66c0f4"
                                                   FontSize="11"
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   TextWrapping="Wrap"
                                                   TextDecorations="Underline"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- App Info -->
                <Border Classes="card">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Steam Workshop Manager"
                                   FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="{Binding Source={x:Static local:AppInfo.Version}, StringFormat='Version {0}'}"
                                   FontSize="12" Foreground="#8899a6"/>
                        <TextBlock FontSize="12" Foreground="#556677">
                            <Run Text="{Binding ActiveSession.GameName, FallbackValue='No session'}"/>
                            <Run Text=" (AppID: "/>
                            <Run Text="{Binding ActiveSession.AppId, FallbackValue='N/A'}"/>
                            <Run Text=")"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
