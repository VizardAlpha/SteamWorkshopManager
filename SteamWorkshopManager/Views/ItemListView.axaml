<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SteamWorkshopManager.ViewModels"
             xmlns:models="using:SteamWorkshopManager.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SteamWorkshopManager.Views.ItemListView"
             x:DataType="vm:ItemListViewModel">

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <Border Grid.Row="0" Padding="24,20" Background="Transparent">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel>
                    <TextBlock Text="{DynamicResource MyPublicationsTitle}"
                               Classes="page-title"/>
                    <TextBlock Text="{DynamicResource MyPublicationsSubtitle}"
                               FontSize="13"
                               Foreground="#8899a6"
                               Margin="0,4,0,0"/>
                </StackPanel>
                <Button Grid.Column="1"
                        Command="{Binding LoadItemsCommand}"
                        Classes="secondary"
                        Content="{DynamicResource Refresh}"
                        IsEnabled="{Binding !IsLoading}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading -->
            <StackPanel IsVisible="{Binding IsLoading}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Spacing="16">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                             Foreground="{StaticResource AccentGradient}"/>
                <TextBlock Text="{DynamicResource LoadingPublications}"
                           HorizontalAlignment="Center"
                           Foreground="#8899a6"/>
            </StackPanel>

            <!-- Error -->
            <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                    Background="#3d2a2a" Padding="16" Margin="24"
                    CornerRadius="8" VerticalAlignment="Top"
                    BorderBrush="#c23b2e" BorderThickness="1">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="!" FontWeight="Bold" Foreground="#c23b2e" FontSize="16"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#ff8a80"/>
                </StackPanel>
            </Border>

            <!-- Empty state -->
            <StackPanel IsVisible="{Binding !IsLoading}"
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Spacing="16">
                <StackPanel.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="!IsLoading"/>
                        <Binding Path="Items.Count" Converter="{x:Static ObjectConverters.IsNull}"/>
                    </MultiBinding>
                </StackPanel.IsVisible>
            </StackPanel>

            <!-- Items grid -->
            <ScrollViewer IsVisible="{Binding !IsLoading}" Padding="16,0">
                <ItemsControl ItemsSource="{Binding Items}" Margin="8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:WorkshopItem">
                            <Button Command="{Binding $parent[ItemsControl].((vm:ItemListViewModel)DataContext).SelectItemCommand}"
                                    CommandParameter="{Binding}"
                                    Margin="8"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Border Width="220"
                                        Background="#2a2e33"
                                        CornerRadius="12"
                                        ClipToBounds="True"
                                        BoxShadow="{StaticResource CardShadow}">
                                    <Border.Transitions>
                                        <Transitions>
                                            <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                                        </Transitions>
                                    </Border.Transitions>
                                    <StackPanel>
                                        <!-- Preview image -->
                                        <Border Height="130" Background="#1e2328" ClipToBounds="True">
                                            <Panel>
                                                <Image Source="{Binding PreviewBitmap}" Stretch="UniformToFill"
                                                       IsVisible="{Binding PreviewBitmap, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                                            IsVisible="{Binding PreviewBitmap, Converter={x:Static ObjectConverters.IsNull}}"
                                                            Spacing="8">
                                                    <TextBlock Text="[IMG]" FontSize="14" HorizontalAlignment="Center" Opacity="0.3"/>
                                                    <TextBlock Text="{DynamicResource NoImage}"
                                                               FontSize="11"
                                                               Foreground="#556677"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <!-- Badges -->
                                                <StackPanel Orientation="Horizontal" Spacing="4"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="8">
                                                    <!-- Contributor badge -->
                                                    <Border Background="#CC8b5cf6"
                                                            CornerRadius="4"
                                                            Padding="5,2"
                                                            MinWidth="18"
                                                            MinHeight="18"
                                                            IsVisible="{Binding !IsOwner}"
                                                            ToolTip.Tip="{DynamicResource Contributor}">
                                                        <TextBlock Text="C"
                                                                   FontSize="10"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <!-- Visibility badge -->
                                                    <Border Background="#CC1e2328"
                                                            CornerRadius="4"
                                                            Padding="8,4">
                                                        <TextBlock Text="{Binding VisibilityIcon}"
                                                                   FontSize="12"
                                                                   ToolTip.Tip="{Binding Visibility}"/>
                                                    </Border>
                                                </StackPanel>
                                            </Panel>
                                        </Border>
                                        <!-- Info -->
                                        <StackPanel Margin="14" Spacing="6">
                                            <TextBlock Text="{Binding Title}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"
                                                       Foreground="White"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="1"/>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                                                <TextBlock Text="{Binding UpdatedAt, StringFormat='{}{0:dd MMM yyyy}'}"
                                                           FontSize="11"
                                                           Foreground="#8899a6"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
